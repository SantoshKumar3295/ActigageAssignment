<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.actigageassignment.activities.MainActivity">

    <LinearLayout
        android:id="@+id/horizental_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tab_background" />

            <com.actigageassignment.utilities.CustomTextView
                android:id="@+id/search_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="Search"
                android:textColor="@color/blue"
                app:textFont="open_sans_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fav_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tab_background" />

            <com.actigageassignment.utilities.CustomTextView
                android:id="@+id/fav_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="Favourites"
                android:textColor="@color/blue"
                app:textFont="open_sans_light" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/horizental_bar"></FrameLayout>
</RelativeLayout>